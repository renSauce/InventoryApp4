<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:InventoryApp.ViewModels"
  x:Class="InventoryApp.Views.MainWindow"
  Width="900" Height="520"
  Title="Inventory System"
  x:CompileBindings="False">

  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <StackPanel Margin="10" Spacing="8">
    <StackPanel Orientation="Horizontal" Spacing="12">
      <Button Content="Process next order" Click="ProcessNextOrder_OnClick" />
      <TextBlock Text="Total revenue:" VerticalAlignment="Center" />
      <TextBlock x:Name="RevenueText" Text="0.00 Kr" FontWeight="Bold" VerticalAlignment="Center" />
    </StackPanel>

    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">

      <StackPanel Grid.Column="0" Spacing="4">
        <TextBlock Text="Queued Orders" FontWeight="SemiBold" />
        <DataGrid ItemsSource="{Binding OrderBook.QueuedOrders}"
          AutoGenerateColumns="False" Height="180">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="180" />
            <DataGridTextColumn Header="Items" Binding="{Binding Summary}" Width="*" />
            <DataGridTextColumn Header="Total"
              Binding="{Binding Total, StringFormat={}{0:C}}"
              Width="120" />
          </DataGrid.Columns>
        </DataGrid>
      </StackPanel>

      <StackPanel Grid.Column="1" Spacing="4">
        <TextBlock Text="Processed Orders" FontWeight="SemiBold" />
        <DataGrid ItemsSource="{Binding OrderBook.ProcessedOrders}"
          AutoGenerateColumns="False" Height="180">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="180" />
            <DataGridTextColumn Header="Items" Binding="{Binding Summary}" Width="*" />
            <DataGridTextColumn Header="Total"
              Binding="{Binding Total, StringFormat={}{0:C}}"
              Width="120" />
          </DataGrid.Columns>
        </DataGrid>
      </StackPanel>
    </Grid>
  </StackPanel>
</Window>